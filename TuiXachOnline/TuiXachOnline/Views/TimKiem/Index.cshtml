
@model List<TuiXachOnline.Models.SANPHAM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @foreach (var item in Model)
    {

        <div class="col-md-6 col-lg-3" style="max-width: 24%; display: inline-block;">


            <div class="product">
                <a href="/DetailTui/ChitietSP?MaSP=@item.MaSP" class="img-prod">
                    <img class="img-fluid" src="~/images/hinhtui/@item.HinhMinhHoa" alt="Colorlib Template">

                    <div class="overlay"></div>
                </a>
                <div class="text py-3 pb-4 px-3 text-center">
                    <h3 style="font-size: 13px;">@item.TenSP</h3>
                    <div class="d-flex">
                        <div class="pricing">
                            <p class="price"><span>@item.DonGia</span></p>
                        </div>
                    </div>
                    <div class="bottom-area d-flex px-3">
                        <div class="m-auto d-flex">
                            <a href="#" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                <span><i class="ion-ios-menu"></i></span>
                            </a>
                            <a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                <span><i class="ion-ios-cart"></i></span>
                            </a>
                            <a href="#" class="heart d-flex justify-content-center align-items-center ">
                                <span><i class="ion-ios-heart"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

