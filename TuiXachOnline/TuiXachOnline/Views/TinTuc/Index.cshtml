@using TuiXachOnline.Models
@model List<TIN_TUC>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero-wrap hero-bread" style="background-image: url('/images/nentintuc.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Trang chủ</a></span> <span class="mr-2"><a href="index.html">Tin Tức</a></span></p>
                <h1 class="mb-0 bread" style="font-family:Arial;font-weight: bold;">Tin Tức</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-8 ">
                    <div class="row">
                        <div class="col-md-12 d-flex ">
                            <div class="blog-entry align-self-stretch d-md-flex">
                                <a href="#" class="block-20" style="background-image: url(../../images/@item.HinhMinhHoa);">
                                </a>
                                <div class="text d-block pl-md-4">
                                    <div class="meta mb-3">
                                        <div><a href="#">@item.date</a></div>
                                        <div><a href="#">Admin</a></div>
                                        <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                                    </div>
                                    <h3 class="heading"><a href="#">@item.TenTT</a></h3>
                                    <p>@item.TomTat</p>
                                    <p><a href="#" class="btn btn-primary py-2 px-3">Read more</a></p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div> <!-- .col-md-8 -->
            }
            <div class="col-lg-4 sidebar" style="margin-top: -1029px;">
                <div class="sidebar-box">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon ion-ios-search"></span>
                            <input type="text" class="form-control" placeholder="Search...">
                        </div>
                    </form>
                </div>
