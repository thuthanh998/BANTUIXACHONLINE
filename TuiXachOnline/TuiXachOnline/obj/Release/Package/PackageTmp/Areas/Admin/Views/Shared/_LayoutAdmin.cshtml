    <!-- Main CSS-->
    <link href="~/css/mains.css" rel="stylesheet" />
    <link href="~/css/main2.css" rel="stylesheet" />
    <!-- Font-icon css-->
    <link href="~/css/SiteS.css" rel="stylesheet" />
