@model TuiXachOnline.Models.KHACH_HANG
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Loginadminss.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>
<script>
        function validateLogin() {
            var x = document.forms["myForm"]["TenDN"].value;
            var y = document.forms["myForm"]["MatKhau"].value;

            if (x == "" || y == "") {
                alert("You need enter Email and Password");
                return false;
            }
        }
        function disablelogin() {
            document.getElementById("TenDN").disabled = true;
            document.getElementById("MatKhau").disabled = true;
        }

</script>
<div class="login-ad">
    <!--Sử dụng beginform truy vấn đến phường thức post-->
    <form action="/User/DangNhap" method="post" name="myForm">

        <div class="icon">
            <div class="icon1">
                <i class="fa fa-user" style="font-size:30px"></i>

            </div>

            <p style="color:white">Hi there! Please Sign in</p>

        </div>
        <div class="div-login">
            <input class="input-validation-error text-box single-line" data-val="true" id="TenDN" name="TenDN" placeholder="Email" type="text" value="">
        </div>
        <div class="div-login">
            <input class="input-validation-error text-box single-line" data-val="true" id="MatKhau" name="MatKhau" placeholder="MatKhau" type="password" value="">
        </div>
        <div>

            @{if (ViewBag.error != null)
                {
                    <p style="color:red">@ViewBag.error</p>
                }
                else if (ViewBag.error == null)
                {
                    <p style="color:white">Hi there! Please Sign in</p>
                }
            }

        </div>
        <div class="div-login" style="margin-top: -20px;"> <button id="btnlogin" onclick="return validateLogin()"><i class='fas fa-arrow-right' style="font-size:24px; color:white"></i></button> </div>


    </form>


</div>

