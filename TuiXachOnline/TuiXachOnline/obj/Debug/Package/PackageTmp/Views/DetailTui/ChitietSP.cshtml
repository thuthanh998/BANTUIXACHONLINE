@using TuiXachOnline.Models
@model SANPHAM
@{
    ViewBag.Title = "ChitietSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/images/bgindex.jpg');padding: 6em 0;">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span class="mr-2"><a href="index.html">Product</a></span> <span>Product Single</span></p>
                <h1 class="mb-0 bread">Product Single</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section">
    <div class="container">

        <div class="row">
            <div class="col-lg-6 mb-5">
                <a href="/images/hinhtui/@Model.HinhMinhHoa" class="image-popup">
                    <img src="/images/hinhtui/@Model.HinhMinhHoa" class="img-fluid" alt="Colorlib Template">
                </a>
            </div>
            <div class="col-lg-6 product-details pl-md-5">
                <h3>@Model.TenSP</h3>
                <div class="rating d-flex">
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2">5.0</a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                    </p>
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2" style="color: #000;">100 <span style="color: #bbb;">Rating</span></a>
                    </p>
                    <p class="text-left">
                        <a href="#" class="mr-2" style="color: #000;">500 <span style="color: #bbb;">Sold</span></a>
                    </p>
                </div>
                <p class="price"><span>@string.Format("{0:0,0}", Model.DonGia) VND</span></p>
                <p class="price"><span>@Model.NHA_SAN_XUAT.TenNSX</span></p>
                <p>
                    @Model.NoiDung
                </p>
                <div class="row mt-4">
                    
                    <div class="w-100"></div>
                    <div class="input-group col-md-6 d-flex mb-3">
                        <span class="input-group-btn mr-2">
                            <button type="button" class="quantity-left-minus btn" data-type="minus" data-field="" onclick="Tru()">
                                <i class="ion-ios-remove"></i>
                            </button>
                        </span>
                        <input type="text" id="txtSL" name="quantity" class="form-control input-number" value="1" min="1" max="100">
                        <span class="input-group-btn ml-2">
                            <button type="button" class="quantity-right-plus btn" data-type="plus" data-field="" onclick="Cong()">
                                <i class="ion-ios-add"></i>
                            </button>
                        </span>
                    </div>
                    <div class="w-100"></div>
                  
                </div>
                <input type="button" id="btn-Cart" value="Thêm Vào Giỏ Hàng" onclick="DatHang(@Model.MaSP)" />
            </div>
        </div>

    </div>

</section>

