
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .btncreate {
        background-color: red;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        color: white;
    }
</style>
<script>
    function validateCreate() {
        var x = document.forms["myForm"]["title"].value;
        var y = document.forms["myForm"]["mota"].value;
        var z = document.forms["myForm"]["cate"].value;
        var g = document.forms["myForm"]["pub"].value;
        var h = document.forms["myForm"]["gia"].value;
        var j = document.forms["myForm"]["SL"].value;
        

        if (x == "" || y == "" || z == "" || g == "" || h == "" || j == "") {
            alert("Vui lòng điền đầy đủ thông tin trước khi tạo !");
            return false;
        }
    }

</script>
<h4 style="">THÊM TÚI MỚI</h4>
<hr />

<form action="/Admin/AminCRUD/tao" method="post" name="myForm">
    <div class="context">
        <div class="text_left">
            <p style="font-weight:bold;font-size:20px;">THÔNG TIN SẢN PHẨM</p>
            <br />


            <table class="table_A">
                <tr>
                    <td>

                        <input type="text" name="title" placeholder="Tên sản phẩm">

                    </td>

                </tr>
                <tr>
                    <td><input type="text" name="mota" placeholder="Nội dung" /></td>
                </tr>
                <tr>
                    <td>
                        @Html.DropDownList("cate", (IEnumerable<SelectListItem>)ViewBag.CategoryList, "Chọn loại túi", new { @class = "dropdown" })
                    </td>
                </tr>
                
                
                <tr>
                    <td>@Html.DropDownList("pub", (IEnumerable<SelectListItem>)ViewBag.PubList, "Chọn nhà sản xuất", new { @class = "dropdown" })</td>
                </tr>
                <tr>
                    <td><input type="text" name="gia" placeholder="Giá" /></td>
                </tr>
                <tr>
                    <td><input type="text" name="SL" placeholder="Số lượng" /></td>
                </tr>
               

            </table>
            <br />

            <div>
                

                <input type="submit" class="btncreate" onclick="return validateCreate()" style="width:130px; background-color:#17aa67" value="Tạo" />



            </div>
        </div>
        <div class="text_right">

            <img id="pictureUpload" width=60% height="250px" />
            @section upload
  {
                <script>
                    $(function () {
                        //đăng ký sự kiện click nút btnUpload
                        $('#btnUpload').click(function () {
                            $('#fileUpload').trigger('click');

                        });
                        // Bắt sự kiện change data của file Upload
                        $('#fileUpload').change(function () {
                            //Kiểm tra trình duyệt có hỗ trợ FormData object không.
                            if (window.FormData !== undefined) {
                                //lấy dữ liệu trên fileUpload
                                var fileUpload = $("#fileUpload").get(0);
                                var files = fileUpload.files;
                                //tạo đối tượng formdata
                                var formData = new FormData();
                                //đưa dữ liệu vào form
                                formData.append('file', files[0]);
                                $.ajax(
                                    {
                                        type: 'POST',
                                        url: '/AminCRUD/ProcessUpload',
                                        contentType: false,
                                        processData: false,
                                        data: formData,
                                        success: function (urlImage) {
                                            $('#pictureUpload').attr('src', urlImage);
                                            $('#picture').val(urlImage);

                                        },
                                        error: function (err) {
                                            alert('co loi khi upload:' + err.statusText);
                                        }
                                    });

                            }
                        });
                    });
                </script>

            }
            <br />
            <br />
            <div class="from-inline">
                <input type="text" name="picture" id="picture" style="display:none;" />
                <input type="file" id="fileUpload" name="fileUpload" style="display:none;"/>
                <input type="button" id="btnUpload" value="Chọn hình" class="btn_Choose" />
            </div>
        </div>

    </div>
</form>



