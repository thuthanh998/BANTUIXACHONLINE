@model TuiXachOnline.Models.SANPHAM
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .btncreate {
        background-color: red;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        color: white;
    }

    th {
        background-color: #17aa67;
        color: white;
    }

    table {
        border: solid 1px white;
    }

    td {
        background-color: white;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="w3-container w3-brown">
        <h2>Xóa Sản Phẩm</h2>
    </div>
    <div>
        <h4>Bạn có muốn xóa sản phẩm này?</h4>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="background-color:#7b7b7b;"> @Html.DisplayNameFor(model => model.MaSP)</th>
                <th style="background-color:#7b7b7b;"> @Html.DisplayNameFor(model => model.TenSP)</th>
                <th style="background-color:#7b7b7b;"> @Html.DisplayNameFor(model => model.DonGia)</th>
                <th style="background-color:#7b7b7b;"> @Html.DisplayNameFor(model => model.SoLuong)</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.MaSP)
                </td>
                <td>
                    @Html.DisplayFor(model => model.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(model => model.SoLuong)
                </td>
               
            </tr>
        </tbody>
    </table>

   

    <input type="submit" class="btncreate" onclick="return validateCreate()" style="width:130px; background-color:#084e07" value="Xóa" />

}
